def reverse_float(num):
    parts = str(num).split('.')
    reversed_parts = [''.join(reversed(part)) for part in parts]

    return float( '.'.join(reversed_parts) )

a = reverse_float(input('Input first number: '))
b = reverse_float(input('Input second number: '))

print(f'First number reversed: {a}')
print(f'Second number reversed: {b}')
print(f'Summ: {a + b}')
